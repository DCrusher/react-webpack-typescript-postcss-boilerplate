{
    "extends": ["tslint-react", "tslint-config-airbnb"],
    "rules": {
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "arrow-return-shorthand": true,
        "ban": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "cyclomatic-complexity": [true, 3],
        "curly": true,
        "encoding": true,
        "eofline": true,
        "forin": true,
        "indent": [true, "spaces", 4],
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true,
        "jsx-no-lambda": true,
        "jsx-no-multiline-js": true,
        "label-position": true,
        "linebreak-style": [true, "CRLF"],
        "max-line-length": [true, 120],
        "member-ordering": [
            true,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "newline-before-return": true,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            //"log",
            "error",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-irregular-whitespace": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true, "single", "jsx-double"],
        "prefer-switch": [true, {"min-cases": 2}],
        "prefer-template": true,
        "radix": true,
        "semicolon": true,
        "switch-default": true,
        "ter-indent": [
            true,
            4,
            { "SwitchCase": 1 }
        ],
        "trailing-comma": [
            true, 
            {
                "multiline": "always", 
                "singleline": "never"
            }
        ],
        "triple-equals": [true, "allow-null-check"],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true, 
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    }
}